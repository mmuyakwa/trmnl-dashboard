# TRMNL API Configuration
# Get your API key from: https://trmnl.app/dashboard
TRMNL_API_KEY=your-api-key-here

# Your TRMNL device MAC address (format: XX:XX:XX:XX:XX:XX)
# Find this in your TRMNL dashboard or on the device label
TRMNL_DEVICE_ID=A1:B2:C3:D4:E5:F6

# TRMNL API base URL (usually doesn't need to change)
TRMNL_BASE_URL=https://trmnl.app/api

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5001